<%= form_for(@patient) do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <table class="table">
      <tbody>
      <tr>
        <td>
          <div>
            Nombre
            <%= f.text_field(:nombre, class: "form-control", placeholder: "") %>
          </div>
          <div>
            Apellido
            <%= f.text_field(:apellido, class: "form-control", placeholder: "") %>
          </div>
          <div>
            C.I.
            <%= f.text_field(:ci, class: "form-control", placeholder: "") %>
          </div>
          <div>
            FNR
            <%= f.text_field(:fnr, class: "form-control", placeholder: "") %>
          </div>
        
          <div>
            Sexo
            <%= f.select(:sexo, options_for_select(['Masculino','Femenino']), {}, {class: "form-control"}) %></div>
          </div>
          <div>
            Fecha Nacimiento
            <input type="date" class="datepicker">
            <%= f.date_select(:f_nacimiento, class: "form-control", placeholder: "") %>
          </div>
          <div>
            Fecha Ingreso
            <input type="date" class="datepicker">
            <%= f.date_select(:f_ingreso, class: "form-control") %>
          </div>
          <div>
            Prestador
            <%= f.select(:prestador, options_for_select(['ASSE','Cosem']), {}, {class: "form-control"}) %>
          </div>  

          </div>
     
          <div>
            Procedencia
            <%= f.select(:procedencia, options_for_select(['Montevideo', 'Canelones','Paysandu', 'Salto', 'Artigas', 'Rio Negro']), {}, {class: "form-control"}) %>
          </div>
          <div>
            Comentarios
            <%= f.text_area(:comentarios, class: "form-control", placeholder: "") %>
          </div>
        </td>
      </tr>


      </tbody>
    </table>

  <div>
    <%= f.submit('Confirmar', class: 'btn btn-primary') %>|
    <%= link_to 'Atras', patients_path, class: 'btn btn-default' %>
  </div>
<% end %>
 


