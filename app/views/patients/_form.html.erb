
<div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Nombre" id="nombre" type="text" class="validate">
          <label for="nombre">Nombre</label>
        </div>
        <div class="input-field col s6">
          <input placeholder="Apellido" id="apellido" type="text" class="validate">
          <label for="apellido">Apellido</label>
        </div>
        <div class="input-field col s6">
          <input placeholder="CI" id="ci" type="text" class="validate">
          <label for="ci">CI</label>
        </div>
        <div class="input-field col s6">
          <input placeholder="FNR" id="fnr" type="integer" class="validate">
          <label for="fnr">FNR</label>
        </div>

        <div class="input-field col s6">
          <input placeholder="Sexo" id="sexo" type="text" class="validate">
          <label for="sexo">Sexo</label>
        </div>

        <div class="input-field col s6">
            <select>
              <option value="" disabled selected>Seleccione una opcion</option>
              <option value="1">Masculino</option>
              <option value="2">Femenino</option>
            </select>
            <label>Sexo</label>
        </div>

        <div class="input-field col s6">
          <input placeholder="Fecha Nacimiento" id="f_nacimiento" type="date" class="validate">
          <label for="f_nacimiento">Fecha Nacimiento</label>
        </div>
       
        <div>
          <input placeholder="Fecha Ingreso" id="f_ingreso" type="date" class="validate">
          <label for="f_ingreso">Fecha Ingreso</label>
        </div>
        <div class="input-field col s6">
          <input placeholder="Prestador de Salud" id="prestador" type="text" class="validate">
          <label for="prestador">Prestador de Salud</label>
        </div>
        <div class="input-field col s6">
            <select>
              <option value="" disabled selected>Seleccione una opcion</option>
              <option value="1">ASSE</option>
              <option value="2">COSEM</option>
              <option value="2">xxxxxx</option>
            </select>
            <label>Prestador de Salud</label>
        </div>

        <div class="input-field col s6">
          <input placeholder="Procedencia" id="prestador" type="text" class="validate">
          <label for="prestador">Procedencia</label>
        </div>
        <div class="input-field col s6">
            <select>
              <option value="" disabled selected>Seleccione una opcion</option>
              <option value="1">Montevideo</option>
              <option value="2">Canelones</option>
              <option value="2">xxxxxx</option>
            </select>
            <label>Procedencia</label>
        </div>
  
        <div class="input-field col s12">
          <textarea placeholder="Placeholder" id="comentarios" class="materialize-textarea"></textarea>
          <label for="comentarios">Comentarios</label>
        </div>
      
        <div>
          <button class="btn waves-effect waves-light" type="submit" name="action">
            <i class="material-icons right">Confirmar</i>
          </button> 
            <%= link_to 'Atras', patients_path, class: 'btn btn-default' %>
        </div>

      </div>
    </form>
  </div>


