<div class container>      
            <%= form_for ([@patient, @patient.corevaluations.build]) do |f| %>
                            
              <div>
              Causa de la Hepatopatia
                  <%= f.select(:causa_hepatopatia, options_for_select(['Sin aclarar','Alcoholica', 'Autoinmune', 'Cirrosis Biliar Primaria', 'Cirrosis Biliar Secundaria', 'Hepatitis B']), {}, {class: "form-control"}) %>
              </div>

              <div>
              Peso actual
                <%= f.number_field :peso %>
              </div>
              <div class="field">
              Talla
                <%= f.number_field :talla %>
              </div>
              <div>
              Pxif
                <%= f.number_field :pxif %>
              </div>
              <div>
              MELD
                <%= f.number_field :meld %>
              </div>
              <div>
              MELDE
                <%= f.number_field :melde %>
              </div>
              <div>
              CHILD
                  <%= f.select(:child, options_for_select(['Sin clasificar','A','B', 'C']), {}, {class: "form-control"}) %>
              </div>
              <div>
              ASA 
                 <%= f.select(:asa, options_for_select(['I','II', 'III', 'IV']), {}, {class: "form-control"}) %>
              </div>
              <div>
              MÃ¡ximos riesgos
                <%= f.text_area :maximos_riesgos %>
              </div>
              <div>
           
                <%= f.check_box :ingresa_lista %>
                <input type="checkbox" id="ingresa_lista" />
                <label for="ingresa_lista">Ingresa a lista de Trasplante?</label>

              </div>
              <div>
              Causa de no ingreso
                <%= f.text_field :causa_no_ingreso %>
              </div>
              <div>
              Estudios pendientes para el ingreso
                <%= f.text_area :estudios_pendientes %>
              </div>
              <div>
                <input type="checkbox" id="candidato_fastrack" />
                <label for="candidato_fastrack">Candidato a Fast Track?</label>

              </div>
              <div>
            
                <input type="checkbox" id="candidato_tranexamico" />
                <label for="candidato_tranexamico">Candidato a Protocolo de Tranexamico?</label>

              </div>
              <div>
                <%= f.submit('Confirmar', class: 'btn btn-primary') %>|
                <%= link_to 'Atras', patients_path, class: 'btn btn-default' %>
              </div>
            <% end %>
</div>

 

